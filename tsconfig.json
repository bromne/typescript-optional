{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "module": "ESNext",
    "outDir": "dist/esm/",
    "rootDirs": [
      "src",
      "test"
    ],
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
